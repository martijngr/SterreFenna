@model SterreFenna.WebPresentation.Menus.MenuModel
@{
    Layout = null;
}

<nav class="navbar navbar-default main-menu">
    <div class="navbar-header">
        <div class="responsive__toggle">
            <button type="button" class="navbar-toggle">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar icon-bar-1"></span>
                <span class="icon-bar icon-bar-2"></span>
                <span class="icon-bar icon-bar-3"></span>
            </button>
        </div>
        <a href="~/" class="responsive__logo">
            <img class="img-responsive" style="max-height: 50px;margin: auto;" src="~/content/images/logo_height_100.png" />
        </a>
        <a href="~/Contact" class="responsive__contact" style="">
            <i class="fa fa-envelope-o" aria-hidden="true"></i>
        </a>
    </div>
    <div class="navbar-collapse">
        <ul class="nav navbar-nav navbar-left">
            @* Left menu *@
            @foreach (var item in Model.MenuItems)
            {
                if (item.MenuItems.Any())
                {
                    <li class="main-menu__item">
                        <a href="#" class="main-menu__link main-menu__triangle">
                            @item.Name
                        </a>
                        <ul class="main-menu__submenu">
                            @foreach (var submenu in item.MenuItems)
                            {
                                <li class="main-menu__submenu__item">
                                    <a href="/@item.UniqueName/@submenu.UniqueName">@submenu.Name</a>
                                </li>
                            }
                        </ul>
                    </li>
                }
                else
                {
                    <li class="main-menu__item">
                        <a href="/@item.UniqueName" class="main-menu__link">@item.Name</a>
                    </li>
                }
            }
        </ul>

        @* Right menu *@
        <ul class="nav navbar-nav navbar-right">
            <li class="main-menu__item">
                <a href="/Contact" class="main-menu__link">
                    Contact
                </a>
                @*<ul class="main-menu__submenu">
                    <li><a href="#">Action</a></li>
                    <li><a href="#">Another action</a></li>
                    <li><a href="#">Something else here</a></li>
                </ul>*@
            </li>
        </ul>
    </div>
</nav>
<div class="main-menu__border"></div>