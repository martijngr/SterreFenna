<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SterreFenna.com</title>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/plugins/swiper/swiper.min.js"></script>
    <script src="~/Scripts/minifiedbundle.min.js" type="text/javascript"></script>
    <script src="~/Scripts/swiperInitializer.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/resizer.js"></script>

    <link href="~/Content/minifiedbundle.min.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Muli' rel='stylesheet' type='text/css'>
    <link href="~/Content/less/show.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <header class="header">
                <a class="header__logo" href="~/">
                    <img class="img-responsive header__logo__img" src="~/Content/images/logo_height_100.png" />
                </a>
            </header>
        </div>
        <div class="row content">
            @RenderBody()
        </div>
        <div class="row">
            <footer class="clearfix">
                @{ Html.RenderAction("Index", "Menu"); }
            </footer>
        </div>
    </div>

    @RenderSection("scripts", false)
    <script>
        (function (i, s, o, g, r, a, m) {
