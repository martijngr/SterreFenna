<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/main.min.css" rel="stylesheet" />
    <script src="~/Scripts/main.min.js" type="text/javascript"></script>
    <link href='https://fonts.googleapis.com/css?family=Muli' rel='stylesheet' type='text/css'>
    <link href="~/Content/less/show.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <header>
                <img src="~/Content/images/logo_height_100.png" class="img-responsive center-block" />
            </header>
        </div>
        <div class="row content">
            @RenderBody()
        </div>
        <div class="row">
            <footer class="clearfix">
                @{ Html.RenderAction("Index", "Menu"); }
            </footer>
        </div>
    </div>

    @RenderSection("scripts", false)
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-82444204-1', 'auto');
        ga('send', 'pageview');
    </script>
</body>
</html>
